---
import "@fontsource/outfit/400.css";
import "@fontsource/outfit/700.css";
import "@fontsource/inter/400.css";
import "@fontsource/inter/600.css";
import "../styles/global.css";

interface Props {
  title?: string;
}

import { ArrowLeft, LogOut } from "lucide-astro";

const { title = "Galeria Rayuela" } = Astro.props;
const user = Astro.locals.user;
const currentPath = Astro.url.pathname;
const showBackButton =
  currentPath !== "/" &&
  currentPath !== "/dashboard" &&
  currentPath !== "/admin";

const isGaleriaEnVivo = currentPath.startsWith("/events/");
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,12..32,100..900&family=Outfit:wght@100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="bg-midnight-950 min-h-screen selection:bg-neon-purple/30 selection:text-white overflow-x-hidden"
  >
    <!-- Navbar / Global Actions -->
    <header
      class="fixed top-0 left-0 right-0 z-50 px-6 py-4 flex justify-between items-center pointer-events-none"
    >
      {
        !isGaleriaEnVivo && (
          <div class="pointer-events-auto">
            {showBackButton && (
              <button
                onclick="history.back()"
                class="glass px-4 py-2 rounded-lg text-xs font-bold text-gray-400 hover:text-white hover:bg-white/10 transition-all flex items-center gap-2"
              >
                <ArrowLeft class="h-4 w-4" />
                VOLVER
              </button>
            )}
          </div>
        )
      }

      <div class="pointer-events-auto">
        {
          user && (
            <form action="/api/auth/logout" method="POST">
              <button
                type="submit"
                class="glass px-4 py-2 rounded-lg text-xs font-bold text-red-400/70 hover:text-red-400 hover:bg-red-500/10 transition-all flex items-center gap-2 group"
              >
                <LogOut class="h-4 w-4 group-hover:-translate-x-1 transition-transform" />
                SALIR
              </button>
            </form>
          )
        }
      </div>
    </header>

    <main class="relative z-10">
      <slot />
    </main>

    <!-- Background Effects -->
    <div class="fixed inset-0 pointer-events-none z-0 overflow-hidden">
      <div
        class="absolute -top-[25%] -left-[10%] w-[60%] h-[60%] bg-neon-blue/10 blur-[120px] rounded-full animate-pulse"
      >
      </div>
      <div
        class="absolute -bottom-[20%] -right-[10%] w-[50%] h-[50%] bg-neon-purple/10 blur-[120px] rounded-full"
      >
      </div>
    </div>
  </body>
</html>
