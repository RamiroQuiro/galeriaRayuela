---
import "@fontsource/outfit/400.css";
import "@fontsource/outfit/700.css";
import "@fontsource/inter/400.css";
import "@fontsource/inter/600.css";
import "../styles/global.css";

interface Props {
  title?: string;
}

import { ArrowLeft, LogOut, Store } from "lucide-astro";
import Button from "../components/ui/Button.astro";
import NavNavegacion from "../components/dashboard/NavNavegacion.astro";
import { ClientRouter } from "astro:transitions";

const { title = "Galeria Rayuela" } = Astro.props;
const currentPath = Astro.url.pathname;
const showBackButton =
  currentPath !== "/" &&
  currentPath !== "/dashboard" &&
  currentPath !== "/admin";

const { user } = Astro.locals;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,12..32,100..900&family=Outfit:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <ClientRouter />
  </head>
  <body
    class="bg-midnight-950 min-h-screen selection:bg-neon-purple/30 text-text selection:text-white flex flex-col overflow-x-hidden"
  >
    <!-- Navbar / Global Actions -->
    <header
      class="relative flex flex-col gap-4 w-full px-6 py-4 justify-between items-center"
    >
      <!-- <div class="pointer-events-auto">
        {
          showBackButton && (
            <Button
              variant="ghost"
              onclick="history.back()"
              class="glass px-4 py-2 rounded-lg text-xs font-bold text-gray-400 hover:text-white hover:bg-white/10 transition-all flex items-center gap-2"
            >
              <ArrowLeft class="h-4 w-4" />
              volver
            </Button>
          )
        }
      </div>

      <div class="pointer-events-auto">
        {
          user && (
            <form action="/api/auth/logout" method="POST">
              <Button
                type="submit"
                variant="ghost"
                className="glass px-4 py-2 rounded-lg text-xs font-bold text-red-400/70 hover:text-red-400 hover:bg-red-500/10 transition-all flex items-center gap-2 group"
              >
                <LogOut class="h-4 w-4 group-hover:-translate-x-1 transition-transform" />
                salir
              </Button>
            </form>
          )
        }
      </div> -->

      <div class="flex w-full justify-between gap-4 items-center">
        <div class="flex items-center gap-5">
          <Button
            variant="ghost"
            onclick="history.back()"
            className="glass px-4 py-2 rounded-lg text-xs font-bold text-gray-400 hover:text-white hover:bg-white/10 transition-all flex items-center gap-2"
          >
            <ArrowLeft class="h-4 w-4" />
            volver
          </Button>
          <h1
            class="text-2xl font-bold text-white mb-2 flex items-center gap-3"
          >
            Â¡Hola, <span
              class="text-neon-blue hover:text-neon-purple transition-all duration-300"
              >{user?.username}</span
            >!
          </h1>
        </div>
        <div class="flex gap-4">
          <a href={`/marketplace/vendedor/${user?.id}`}>
            <Button
              variant="secondary"
              size="md"
              className="flex items-center gap-2"
            >
              <Store class="h-4 w-4" />
              Ver Mi Marketplace
            </Button>
          </a>

          <form class="flex" action="/api/auth/logout" method="POST">
            <Button
              type="submit"
              variant="ghost"
              className="glass px-4 py-2 rounded-lg text-xs font-bold text-red-400/70 hover:text-red-400 hover:bg-red-500/10 transition-all flex items-center gap-2 group"
            >
              <LogOut
                class="h-4 w-4 group-hover:-translate-x-1 transition-transform"
              />
              salir
            </Button>
          </form>
        </div>
      </div>
      <NavNavegacion />
    </header>

    <main class="relative z-10">
      <slot />
    </main>

    <!-- Background Effects -->
    <div class="fixed inset-0 pointer-events-none z-0 overflow-hidden">
      <div
        class="absolute -top-[25%] -left-[10%] w-[60%] h-[60%] bg-neon-blue/10 blur-[120px] rounded-full animate-pulse"
      >
      </div>
      <div
        class="absolute -bottom-[20%] -right-[10%] w-[50%] h-[50%] bg-neon-purple/10 blur-[120px] rounded-full"
      >
      </div>
    </div>
  </body>
</html>
