---
import { cn } from "../../utils/cn";

interface Props extends astroHTML.JSX.InputHTMLAttributes {
  label?: string;
  error?: string;
  className?: string;
}

const { label, error, className, ...rest } = Astro.props;
---

<div class="w-full flex flex-col gap-1.5">
  {
    label && (
      <label class="text-[10px] uppercase tracking-widest text-gray-500 font-bold ml-1">
        {label}
      </label>
    )
  }
  <input
    class={cn(
      "w-full bg-white/5 border border-text rounded-lg px-4 py-2.5 text-white placeholder-gray-500 transition-all",
      "focus:outline-none focus:border-neon-purple/50 focus:ring-1 focus:ring-neon-purple/20",
      "disabled:opacity-50 disabled:cursor-not-allowed",
      error && "border-red-500/50 focus:border-red-500 focus:ring-red-500/20",
      className
    )}
    {...rest}
  />
  {error && <span class="text-[10px] text-red-500 ml-1">{error}</span>}
</div>
