---
import { X } from "lucide-astro";
import Button from "../Button.astro";

interface Props {
  id: string;
  iconNode?: any;
  label?: string;
  title: string;
  isIcon?: boolean;
  classNameButton?: string;
}

const { id, iconNode, label, title, isIcon, classNameButton } = Astro.props;
const Icon = iconNode;
---

<div data-id={id}>
  {
    label && (
      <Button
        className={classNameButton}
        variant="primary"
        id={`modal-open-${id}`}
      >
        {isIcon && Icon && <Icon class="mr-2 h-4 w-4" />}
        {label}
      </Button>
    )
  }

  <dialog
    id={`dialog-modal-${id}`}
    class="modal fixed inset-0 z-[100] bg-transparent p-0 m-0 w-full h-full max-w-none max-h-none backdrop:bg-black/60 backdrop:backdrop-blur-sm"
  >
    <div class="fixed inset-0 flex items-center justify-center p-4 sm:p-6">
      {/* Modal Content */}
      <div
        class="relative w-full max-w-lg bg-gray-900/90 border border-white/10 rounded-3xl shadow-2xl overflow-hidden animate-scaleIn backdrop-blur-xl flex flex-col max-h-[90vh]"
        role="document"
      >
        {/* Header */}
        <div
          class="flex items-center justify-between p-6 border-b border-white/5 flex-shrink-0"
        >
          <h3 class="text-xl font-bold text-white tracking-tight">{title}</h3>
          <button
            id={`modal-close-${id}`}
            class="p-2 hover:bg-white/5 rounded-xl text-gray-400 hover:text-white transition-all transform hover:rotate-90 duration-300 focus:outline-none"
            aria-label="Cerrar modal"
          >
            <X class="w-5 h-5" />
          </button>
        </div>

        {/* Body */}
        <div class="p-6 overflow-y-auto custom-scrollbar">
          <slot />
        </div>
      </div>
    </div>
  </dialog>
</div>

<script define:vars={{ id }}>
  const openBtn = document.getElementById(`modal-open-${id}`);
  const closeBtn = document.getElementById(`modal-close-${id}`);
  const dialog = document.getElementById(`dialog-modal-${id}`);

  // Animations
  const openModal = () => {
    if (dialog) {
      dialog.showModal();
      document.body.style.overflow = "hidden";
      // Add animation classes if needed, though Tailwind does most work
    }
  };

  const closeModal = () => {
    if (dialog) {
      dialog.close();
      document.body.style.overflow = "";
    }
  };

  openBtn?.addEventListener("click", openModal);
  closeBtn?.addEventListener("click", closeModal);

  // Close on backdrop click
  dialog?.addEventListener("click", (event) => {
    // Only close if clicking the dialog element itself (the backdrop),
    // not the inner content div which propagates clicks
    if (event.target === dialog) {
      closeModal();
    }
  });

  // Handle ESC key manually if needed for custom behavior,
  // but <dialog> handles it by default.
  // We just ensure overflow is reset.
  dialog?.addEventListener("close", () => {
    document.body.style.overflow = "";
  });
</script>

<style>
  /* Custom Scrollbar for the modal content */
  .custom-scrollbar::-webkit-scrollbar {
    width: 6px;
  }
  .custom-scrollbar::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
  }
  .custom-scrollbar::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 10px;
  }
  .custom-scrollbar::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.3);
  }

  /* Reset default dialog styles */
  dialog {
    background: transparent;
    color: inherit;
  }
</style>
