---
import Layout from "../../layouts/Layout.astro";
import { db } from "../../db";
import { services } from "../../db/schemas";
import { eq, desc } from "drizzle-orm";

const user = Astro.locals.user;

if (!user) {
  return Astro.redirect("/login");
}

// Obtener servicios del usuario
const myServices = await db
  .select()
  .from(services)
  .where(eq(services.tenantId, user.tenantId))
  .orderBy(desc(services.created_at))
  .all();
---

<Layout title="Mis Servicios | Galeria Rayuela">
  <div class="container mx-auto p-4 max-w-7xl pt-10">
    <div
      class="flex justify-between items-end mb-10 pb-6 border-b border-white/10"
    >
      <div>
        <h1
          class="text-4xl font-bold bg-clip-text text-transparent bg-linear-to-r from-neon-purple to-neon-pink"
        >
          Panel de Vendedor
        </h1>
        <p class="text-gray-400 mt-2">
          Gestiona tu presencia profesional y servicios en el Marketplace.
        </p>
      </div>
      <div class="flex gap-4">
        <a href="/services/create" class="glass-button flex items-center gap-2">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 4v16m8-8H4"></path>
          </svg>
          Nuevo Servicio
        </a>
      </div>
    </div>

    {/* Editor de Perfil */}
    <div class="mb-16">
      <h2 class="text-xl font-bold text-white mb-6 flex items-center gap-2">
        <div
          class="w-2 h-2 rounded-full bg-neon-purple shadow-[0_0_10px_rgba(188,19,254,0.8)]"
        >
        </div>
        Tu Perfil Profesional
      </h2>

      <form
        id="profileForm"
        class="glass-card p-8 border-white/5 bg-midnight-900/40"
      >
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="space-y-6">
            <div>
              <label
                class="block text-[10px] font-black uppercase tracking-widest text-gray-500 mb-2"
                >Biografía Profesional</label
              >
              <textarea
                name="bio"
                rows="4"
                class="glass-input w-full resize-none text-sm"
                placeholder="Cuéntanos sobre tu experiencia y lo que ofreces..."
                >{user.bio || ""}</textarea
              >
            </div>
          </div>

          <div class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label
                  class="block text-[10px] font-black uppercase tracking-widest text-gray-500 mb-2"
                  >Ubicación</label
                >
                <input
                  type="text"
                  name="location"
                  class="glass-input w-full text-sm"
                  placeholder="ej. Buenos Aires, Argentina"
                  value={user.location || ""}
                />
              </div>
              <div>
                <label
                  class="block text-[10px] font-black uppercase tracking-widest text-gray-500 mb-2"
                  >WhatsApp</label
                >
                <input
                  type="text"
                  name="whatsapp"
                  class="glass-input w-full text-sm"
                  placeholder="ej. 54911..."
                  value={user.whatsapp || ""}
                />
              </div>
            </div>

            <div class="pt-2">
              <button
                type="submit"
                class="w-full py-4 rounded-xl bg-white/5 hover:bg-white/10 border border-white/10 text-white font-black uppercase tracking-widest text-[10px] transition-all flex items-center justify-center gap-2 group"
              >
                Guardar Cambios de Perfil
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="w-4 h-4 group-hover:scale-110 transition-transform"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
              </button>
            </div>
          </div>
        </div>
      </form>
    </div>

    <script>
      const profileForm = document.getElementById(
        "profileForm"
      ) as HTMLFormElement;
      profileForm?.addEventListener("submit", async (e) => {
        e.preventDefault();
        const formData = new FormData(profileForm);
        const data = Object.fromEntries(formData);

        try {
          const res = await fetch("/api/users/profile", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(data),
          });

          if (res.ok) {
            alert("Perfil actualizado correctamente");
          } else {
            alert("Error al actualizar el perfil");
          }
        } catch (err) {
          console.error(err);
          alert("Ocurrió un error inesperado");
        }
      });
    </script>

    {
      myServices.length === 0 ? (
        <div class="glass-card p-12 text-center border-dashed border-2 border-white/20">
          <div class="bg-white/5 rounded-full p-4 w-16 h-16 mx-auto mb-4 flex items-center justify-center">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-8 w-8 text-gray-400"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
              />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-2">
            Aún no ofreces servicios
          </h3>
          <p class="text-gray-400 mb-6 max-w-md mx-auto">
            Comienza a ganar dinero ofreciendo tus habilidades a otros
            organizadores de eventos.
          </p>
          <a href="/services/create" class="glass-button inline-flex">
            Crear primer servicio
          </a>
        </div>
      ) : (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {myServices.map((service) => (
            <div class="glass-card group flex flex-col h-full relative overflow-hidden">
              <div class="h-48 bg-gray-800 relative">
                {Array.isArray(service.images) && service.images.length > 0 ? (
                  <img
                    src={(service.images as string[])[0]}
                    alt={service.name}
                    class="w-full h-full object-cover"
                  />
                ) : (
                  <div class="w-full h-full flex items-center justify-center bg-gray-800 text-gray-600">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-12 w-12"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                      />
                    </svg>
                  </div>
                )}
                <div class="absolute top-2 right-2">
                  <span
                    class={`px-2 py-1 rounded text-xs font-bold ${service.isActive ? "bg-green-500/20 text-green-300" : "bg-red-500/20 text-red-300"}`}
                  >
                    {service.isActive ? "ACTIVO" : "INACTIVO"}
                  </span>
                </div>
              </div>
              <div class="p-6 flex-1 flex flex-col">
                <div class="flex justify-between items-start mb-2">
                  <h3 class="text-xl font-bold text-white">{service.name}</h3>
                  <span class="text-neon-green font-mono font-bold">
                    ${service.price}{" "}
                    <span class="text-xs text-gray-500">/{service.unit}</span>
                  </span>
                </div>
                <p class="text-gray-400 text-sm mb-4 line-clamp-2">
                  {service.description}
                </p>

                <div class="mt-auto pt-4 border-t border-white/10 flex justify-end gap-2">
                  <button class="text-sm text-gray-400 hover:text-white transition-colors">
                    Editar
                  </button>
                  <button class="text-sm text-red-400 hover:text-red-300 transition-colors">
                    Eliminar
                  </button>
                </div>
              </div>
            </div>
          ))}
        </div>
      )
    }
  </div>
</Layout>
