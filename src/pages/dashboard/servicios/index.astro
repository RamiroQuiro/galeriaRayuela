---
import { db } from "../../../db/index";
import { services } from "../../../db/schemas";
import { desc, eq } from "drizzle-orm";
import DashboarLayout from "../../../layouts/DashboarLayout.astro";
import Button from "../../../components/ui/Button.astro";
import { Plus } from "lucide-astro";

const user = Astro.locals.user;

if (!user) {
  return Astro.redirect("/login");
}

// Fetch services for the logged-in tenant/user
const myServices = await db
  .select()
  .from(services)
  .where(eq(services.tenantId, user.tenantId))
  .orderBy(desc(services.created_at))
  .all();
---

<DashboarLayout title="Mis Servicios | Galeria Rayuela">
  <div class="container mx-auto p-4 max-w-7xl pt-10">
    <div class="flex items-center justify-between mb-8">
      <div>
        <h2 class="text-2xl font-bold text-white flex items-center gap-3">
          <Plus class="h-6 w-6 text-neon-blue" />
          Mis Servicios
        </h2>
        <p class="text-gray-400 text-sm mt-1">
          Ofertas activas para organizadores de eventos.
        </p>
      </div>
      <a href="/services/create">
        <Button
          variant="secondary"
          size="sm"
          className="flex items-center gap-2"
        >
          <Plus class="h-4 w-4" />
          Nuevo Servicio
        </Button>
      </a>
    </div>

    {
      myServices.length === 0 ? (
        <div class="glass-card p-12 text-center border-dashed border-2 border-white/20">
          <div class="bg-white/5 rounded-full p-4 w-16 h-16 mx-auto mb-4 flex items-center justify-center">
            <Plus class="h-8 w-8 text-gray-400" />
          </div>
          <h3 class="text-xl font-bold text-white mb-2">
            AÃºn no ofreces servicios
          </h3>
          <p class="text-gray-400 mb-6 max-w-md mx-auto">
            Comienza a ofrecer tus servicios a otros organizadores.
          </p>
          <a href="/services/create">
            <Button variant="primary">Crear mi primer servicio</Button>
          </a>
        </div>
      ) : (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {myServices.map((service) => (
            <div class="glass-card group flex flex-col h-full relative overflow-hidden">
              <div class="h-48 bg-gray-800 relative">
                {Array.isArray(service.images) && service.images.length > 0 ? (
                  <img
                    src={(service.images as string[])[0]}
                    alt={service.name}
                    class="w-full h-full object-cover"
                  />
                ) : (
                  <div class="w-full h-full flex items-center justify-center bg-gray-800 text-gray-600">
                    <Plus class="h-12 w-12" />
                  </div>
                )}
                <div class="absolute top-2 right-2">
                  <span
                    class={`px-2 py-1 rounded-full text-[10px] font-bold border ${service.isActive ? "bg-green-500/20 text-green-300 border-green-500/30" : "bg-red-500/20 text-red-300 border-red-500/30"}`}
                  >
                    {service.isActive ? "ACTIVO" : "INACTIVO"}
                  </span>
                </div>
              </div>
              <div class="p-6 flex-1 flex flex-col">
                <div class="flex justify-between items-start mb-2">
                  <h3 class="text-xl font-bold text-white group-hover:text-neon-blue transition-colors line-clamp-1">
                    {service.name}
                  </h3>
                  <span class="text-neon-green font-mono font-bold text-sm">
                    ${service.price}
                  </span>
                </div>
                <p class="text-gray-400 text-sm mb-4 line-clamp-2 leading-relaxed">
                  {service.description}
                </p>
                <div class="mt-auto pt-4 border-t border-white/10 flex justify-end gap-3">
                  <button class="text-xs font-bold uppercase tracking-widest text-gray-500 hover:text-white transition-colors">
                    Editar
                  </button>
                  <button class="text-xs font-bold uppercase tracking-widest text-red-500/70 hover:text-red-400 transition-colors">
                    Eliminar
                  </button>
                </div>
              </div>
            </div>
          ))}
        </div>
      )
    }
  </div>
</DashboarLayout>
